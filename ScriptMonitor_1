// ==UserScript==
// @name         Script Monitor 1
// @namespace    http://tampermonkey.net/
// @version      1.0
// @description  Watches and reinstalls Script Monitor 2
// @author       Miss
// @match        *://*/*
// @grant        GM_setValue
// @grant        GM_getValue
// @grant        GM_xmlhttpRequest
// @run-at       document-start
// ==/UserScript==

(function() {
    'use strict';

    const monitoredScript = "Script Monitor 2";

    // Check if Script Monitor 2 is present
    setInterval(() => {
        if (!GM_getValue("script2_active")) {
            alert(`${monitoredScript} is missing! Reinstalling...`);
            reinstallScript2();
        }
    }, 5000);

    // Function to reinstall Script Monitor 2
    function reinstallScript2() {
        const script2URL = "https://your-script-2-url-goes-here"; // Replace with raw URL to Script 2
        GM_xmlhttpRequest({
            method: "GET",
            url: script2URL,
            onload: function(response) {
                GM_setValue("script2_active", true);
                eval(response.responseText);
            }
        });
    }

    GM_setValue("script1_active", true); // Mark this script as active
})();
